; 4-column space indentation
[*]
indent_style = space

[*.{cs,tt}]
indent_size = 4

#Customized CA1716: Identifiers should not match keywords unless in NameSpace
dotnet_code_quality.CA1716.analyzed_symbol_kinds = Namespace, Method, Property, Event, Parameter

[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2
